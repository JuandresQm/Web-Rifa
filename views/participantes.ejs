<!DOCTYPE html>
<html>
<head>
  <title>Participantes</title>
  <link rel="stylesheet" href="/css/estilos.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg bg-light" data-bs-theme="light">
        <div class="container-fluid">
            <a class="navbar-brand" href="/" style="font-size: 30px; margin-left: 20px;;">Inicio</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-h5="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
            </div>
        </nav>
<% datos.forEach(function(row, index) { %>
    <div class="modal fade" id="numerosModal<%= index %>" tabindex="-1" role="dialog" aria-labelledby="numerosModalLabel<%= index %>" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="numerosModalLabel<%= index %>">Números comprados por <%= row.nombre %></h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <ul>
              <% row.numeros_comprados.split(',').forEach(function(numero) { %>
                <li><%= numero %></li>
              <% }); %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% }); %>
            <div class="container" style="margin-top: 10px;">
              <table class="table table-hover table-bordered table-striped">
                <thead>
                  <tr>
                    <th scope="col" style="color: white;">Nombre</th>
                    <th scope="col" style="color: white;">Cédula</th>
                    <th scope="col" style="color: white;">Cantidad de números comprados</th>
                    <th scope="col" style="color: white;">Ver números comprados</th>
                  </tr>
                </thead>
                <tbody>
                  <% if (datos.length == 0) {%>
                    <p>No hay participantes.</p>
                    <%  } else { %>
                  <% datos.forEach(function(row, index) { %>
                    <% if (index % 2 === 0) { %>
                      <tr class="table-dark">
                    <% } else { %>
                      <tr class="table-secondary">
                    <% } %>
                      <td><%= row.nombre %></td>
                      <td><%= row.cedula %></td>
                      <td><%= row.cantidad_numeros %></td>
                      <td>
                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#numerosModal<%= index %>">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><path d="M15 12c0 1.654-1.346 3-3 3s-3-1.346-3-3 1.346-3 3-3 3 1.346 3 3zm9-.449s-4.252 8.449-11.985 8.449c-7.18 0-12.015-8.449-12.015-8.449s4.446-7.551 12.015-7.551c7.694 0 11.985 7.551 11.985 7.551zm-7 .449c0-2.757-2.243-5-5-5s-5 2.243-5 5 2.243 5 5 5 5-2.243 5-5z"/></svg>
                        </button>
                      </td>
                    </tr>
                  <% }) }; %>
                 
                </tbody>
              </table>
            </div>
          </body>
          <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
          <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
          <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
          </html>