  <table class="matriz" style="display: flex; justify-content: center; align-items: center; margin: 25px;">      
    <% for (let i = 1; i <= size; i++) { %>
      <tr>
        <% for (let j = 1; j <= 25; j++) { %>
          <% let found = false; %>
          <% datos.forEach(dato => {  
            if (dato.numero == count) {
              found = true;
              total= total + 1 ;
            }
          }); %>
         <td class="matriz td" id="numero-<%= count %>" <% if (found) { %>style="background-color: #f39c12;"<% } else { %> onclick="addToCount(<%= count %>)" <% } %> >
          <a <% if (found) { %> href="/guardar/<%= count %>" <% } %> class="text-body"><%= count %></a>
        </td>
          <% count++; %>
        <% } %>
      </tr>
    <% } %>
    <p style="margin-left: 10px;"><%= total %>/<%= size * 25 %> tickets</p>
  </table>
