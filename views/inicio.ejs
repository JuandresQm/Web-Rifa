.btn-info {
  border-radius: 20px;
  box-shadow: 0 0 0 0 orange 0.5, 0 0 0 0 cornflowerblue 0.5;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
  overflow: hidden;
  display: inline-flex;
  align-items: center;
}

.btn-info svg {
  width: 32px;
  height: 32px;
}

.btn-info::after {
  content: "";
  position: absolute;
  top: -50px;
  left: -100px;
  background: #26e07f;
  background-image: linear-gradient(to right, #43e97b 0%, #38f9d7 100%);
  z-index: -1;
  transition: transform 0.5s ease;
}

.btn-info:hover {
  transform: translate(0, -6px);
  box-shadow: 10px -10px 25px 0 rgba(83, 161, 191, 0.5), -10px 10px 25px 0 rgba(82, 159, 190, 0.7);
}

.btn-info:hover::after {
  transform: rotate(150deg);
}

.bi-arrow-up-short {
  font-weight: 800;
  font-size: 50px;
}

.btn-info {
  animation-duration: 3s;
  animation-name: slidein;
  animation-direction: inherit;
  animation-direction: alternate;
}

@keyframes slidein {
  from {
    margin-left: -100%;
    width: 10%;
  }

  to {
    margin-left: 0%;
    width: 4.8%;
  }
}
@keyframes slideout {
  from {
    margin-left: 0%;
    width: 4.8%;
  }

  to {
    margin-left: -100%;
    width: 10%;
  }
}
  </style>
